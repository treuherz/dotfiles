[user]
	email = eli.treuherz@cgi.com
	name = Eli Treuherz
[push]
	default = simple
[core]
	editor = nvim
	excludesfile = /home/eli/.gitignore_global
	autocrlf = input
	pager = diff-so-fancy | less --tabs=4 -RFX
[mergetool "fugitive"]
	cmd = nvim -c \"Gvdiff\" \"$MERGED\"
[merge]
	tool = fugitive
[difftool "nvimdiff"]
	cmd = nvim -d \"$LOCAL\" \"$REMOTE\"
[diff]
	tool = nvimdiff
	algorithm = histogram
[alias]
	ss = status -sb
	st = status
	ll = !git --no-pager log --oneline --decorate --graph -n 10
	la = !git ll --all
	lll = log --all --oneline --decorate --graph --date-order
	purr = pull --rebase
	puff = pull --ff-only
	unstage = reset HEAD --
	root = rev-parse --show-toplevel
	amend = commit --amend --no-edit
[gitreview]
	remote = origin
	username = treuherze
[alais]
[rebase]
	autosquash = true
[diff-so-fancy]
	stripLeadingSymbols = false
