[user]
	email = eli.treuherz@cgi.com
	name = Eli Treuherz
[push]
	default = simple
[core]
	editor = nvim
[mergetool "fugitive"]
	cmd = nvim -c \"Gvdiff\" \"$MERGED\"
[merge]
	tool = fugitive
[diff]
	algorithm = histogram
[alias]
	ss = status -sb
	st = status
	ll = --no-pager log --all --oneline --decorate --graph -n 15
	lll = log --all --oneline --decorate --graph
	purr = pull --rebase
	unstage = reset HEAD --
[gitreview]
	remote = origin
	username = treuherze
